@model StockUp.Models.Produto

@{
    ViewData["Title"] = "Details";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f0f8ff;
    }
    .container {
        background-color: white;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        max-width: 880px;
        margin-top: 70px;
    }
    h1 {
        color: #333;
        margin-top: 0;
    }
    .info-table {
        width: 100%;
        border-collapse: collapse;
    }
    .info-table tr:nth-child(even) {
        background-color: #f2f2f2;
    }
    .info-table td {
        padding: 10px;
        border-bottom: 1px solid #ddd;
    }
    .info-table td:first-child {
        font-weight: bold;
        width: 40%;
    }
    .btn {
        display: inline-block;
        padding: 10px 20px;
        background-color: #007bff;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        margin-top: 20px;
    }
    .btn:hover {
        background-color: #0056b3;
    }
    .btn-secondary {
        background-color: #dc3545;
        color: white;
    }
</style>

<h4>Informações do produto</h4>
<table class="info-table">
    <tr>
        <td>ID</td>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <td>Nome</td>
        <td>@Model.Nome</td>
    </tr>
    <tr>
        <td>Preço</td>
        <td>@Model.Preco.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("pt-br"))</td>
    </tr>
    <tr>
        <td>Quantidade</td>
        <td>@Model.Quantidade</td>
    </tr>
    <tr>
        <td>Estoque mínimo</td>
        <td>@Model.EstoqueMinimo</td>
    </tr>
    <tr>
        <td>Categoria</td>
        <td>@Model.Categoria</td>
    </tr>
    <tr>
        <td>Fornecedor</td>
        <td>@Model.Fornecedor.Nome</td>
    </tr>
</table>
<a asp-action="Edit" asp-route-id="@Model.Id" class="btn">Editar</a>
<a asp-action="Delete" asp-route-id="@Model.Id" value="Delete" class="btn btn-secondary">Deletar</a>