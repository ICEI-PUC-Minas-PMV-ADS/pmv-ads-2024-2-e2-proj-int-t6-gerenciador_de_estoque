@model IEnumerable<StockUp.Models.Produto>

@{
    ViewData["Title"] = "Index";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f0f8ff;
    }

    .container {
        background-color: white;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        max-width: 880px;
        margin-top: 70px;
    }

    h1 {
        color: #333;
        margin-top: 0;
    }

    .search-bar {
        margin-bottom: 20px;
    }

        .search-bar input[type="text"] {
            padding: 8px;
            width: 200px;
            margin-right: 10px;
        }

    .btn {
        padding: 8px 15px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 14px;
        color: white;
        text-decoration: none;
        display: inline-block;
    }

    .btn-primary {
        background-color: #007bff;
    }

    .btn-success {
        background-color: #28a745;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        text-align: left;
        padding: 12px;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #f2f2f2;
        font-weight: bold;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    form {
        display: flex;
    }

    .container-button {
        gap: 1rem;
    }
</style>

<h4>Lista de produtos</h4>
<div class="search-bar">
    <form method="get" asp-action="Index">
        <input type="text" name="keyword" value="@ViewData["CurrentFilter"]" placeholder="Pesquisar" class="form-control" />
        <div class="container-button">
            <button type="submit" class="btn btn-primary">Pesquisar</button>
            <a asp-action="Create" class="btn btn-success">Adicionar</a>
        </div>
    </form>
</div>
<table class="info-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                Preço
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                Estoque mínimo
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fornecedor)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a style="text-decoration: none;" asp-action="Details" asp-route-id="@item.Id">@item.Nome</a>
            </td>
            <td>
                @item.Preco.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("pt-br"))
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstoqueMinimo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fornecedor.Nome)
            </td>
        </tr>
}
    </tbody>
</table>
