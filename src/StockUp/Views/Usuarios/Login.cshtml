@model StockUp.Models.Usuario

@{
    ViewData["Title"] = "Login";
    Layout = "_Layout1";
}

<form id='float-form' asp-action="Login">
    <h2 style='text-align:center'><a href='/Home/Index' title='Inicio' class='text-decoration-none'><b>Stock<span style='color: blue; display:inline'>Up</b></a></span></h2>
    <h3 style='text-align:center'>Acesse sua conta</h3>

<div class="row">
    <div class="col-md-12">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control 100" width="auto" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Senha" class="control-label"></label>
                <input asp-for="Senha" class="form-control 100" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <div class="form-group mb-3 100">
                <input type="submit" value="Entrar" class="btn btn-primary" />   <button class="btn btn-success" onClick="window.location.href='Create'">Cadastre-se</button>
            </div>
    </div>
</div>

<div>
   <a asp-controller="Home" asp-action="Index">Voltar</a>
</div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
